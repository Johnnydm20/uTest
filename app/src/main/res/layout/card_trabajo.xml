<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:id="@+id/parent_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/cardTrabajo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:cardBackgroundColor="#fffffe91" >

        <ImageView
            android:id="@+id/photoTrabajo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/aire_llanta"
            android:scaleType="centerCrop"/>

        <!-- <TextView
            android:id="@+id/nameTrabajo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Aire"
            android:layout_gravity="bottom"
            android:background="#8c000000"
            android:textColor="#ffe3e3e3"
            android:textSize="30sp"
            android:textStyle="bold"/> -->

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trabajo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambio de Llanta"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bs. 14"
            android:textColor="#757575"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_delete"
                tools:ignore="VectorDrawableCompat"
                android:paddingLeft="20dp"/>

            <!-- <ImageView
                android:id="@+id/image_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_delete"
                tools:ignore="VectorDrawableCompat"
                android:paddingLeft="60dp"/> -->

        </LinearLayout>



    </LinearLayout>



</LinearLayout>